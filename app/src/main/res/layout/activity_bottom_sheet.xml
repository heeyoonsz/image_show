<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:id="@+id/bottom_sheet"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"

    android:background="#F9FBFF"


    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        android:fontFamily="@font/nanum_gothic_bold"
        android:gravity="center"
        android:text="표준근로계약서"
        android:textColor="@color/purple_700"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/logimg_2" />


    <!--사업자명!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"

            android:fontFamily="@font/nanum_gothic"
            android:text="사업자명"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/employer_textlayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:textColorHint="@color/dark_white"
            app:boxBackgroundColor="@color/back">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/employer_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문정인" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <!--근로자명!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"

            android:fontFamily="@font/nanum_gothic"
            android:text="근로자명"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="200dp"

            android:id="@+id/employee_textlayout"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:textColorHint="@color/dark_white"
            app:boxBackgroundColor="@color/back">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/employee_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="유T">

            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <!--근무 장소!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"

            android:fontFamily="@font/nanum_gothic"
            android:text="근무장소"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/workplace_textlayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:textColorHint="@color/dark_white"
            app:boxBackgroundColor="@color/back">

            <com.google.android.material.textfield.TextInputEditText
                android:text="설빙"
                android:id="@+id/workplace_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <!--업무 내용!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"

            android:fontFamily="@font/nanum_gothic"
            android:text="업무내용"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/task_textlayout"
            android:textColorHint="@color/dark_white"
            app:boxBackgroundColor="@color/back">

            <com.google.android.material.textfield.TextInputEditText
                android:text="음료 제조"
                android:id="@+id/task_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <!--시급!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/wage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"

            android:fontFamily="@font/nanum_gothic"
            android:text="  시급     "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/employee_wage_textlayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:textColorHint="@color/dark_white"
            app:boxBackgroundColor="@color/back">

            <com.google.android.material.textfield.TextInputEditText
                android:text="q530원"
                android:id="@+id/employee_wage_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>


<!--근로계약 시작일!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:orientation="horizontal">


    </LinearLayout>

    <!--근무시간!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workhour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"

            android:fontFamily="@font/nanum_gothic"
            android:text="근로시간"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="200dp"

            android:id="@+id/employee_workhour_textlayout"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:textColorHint="@color/dark_white"
            app:boxBackgroundColor="@color/back">

            <com.google.android.material.textfield.TextInputEditText
                android:text="8시간 30분"
                android:id="@+id/workhour_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"

        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="69dp"        android:checked="false"
            android:text="월" android:buttonTint="#E91E63"
            />
        <CheckBox
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="69dp"        android:checked="false"
            android:text="화" android:buttonTint="#E91E63"
            />
        <CheckBox
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="69dp"        android:checked="false"
            android:text="수" android:buttonTint="#E91E63"
            />
        <CheckBox
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="69dp" android:buttonTint="#E91E63"        android:checked="false"
            android:text="목"
            />
        <CheckBox
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="69dp"        android:checked="false"
            android:text="금" android:buttonTint="#E91E63"
            />
        <CheckBox
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:text="토"
            android:buttonTint="#E91E63"
            />
        <CheckBox
            android:id="@+id/sunday"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:text="일"
            android:checked="false"
            android:buttonTint="#E91E63"
            />


    </LinearLayout>


</LinearLayout>